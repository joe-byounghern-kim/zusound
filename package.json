{
  "name": "zusound-monorepo",
  "version": "0.2.0",
  "private": false,
  "description": "Zusound - Audio feedback middleware for Zustand",
  "repository": {
    "type": "git",
    "url": "https://github.com/joe-byounghern-kim/zusound.git"
  },
  "license": "MIT",
  "author": "joe-byounghern-kim",
  "type": "module",
  "workspaces": [
    "packages/zusound",
    "examples"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:watch": "turbo run build:watch",
    "changeset": "changeset",
    "clean": "turbo run clean && rm -rf node_modules",
    "dev": "turbo run dev",
    "demo:stage": "pnpm build && pnpm -C demo run stage",
    "demo:stage:clean": "pnpm -C demo run clean-stage",
    "demo:verify": "pnpm -C demo run check-stage",
    "demo:preview": "python3 -m http.server 4173 --directory demo/dist-site",
    "demo:react:dev": "pnpm -C examples dev",
    "demo:react:build": "pnpm -C examples build",
    "demo:react:typecheck": "pnpm -C examples typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml}\"",
    "lint": "turbo run lint",
    "prepare": "husky install",
    "release": "turbo run build && changeset publish",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "test:watch": "turbo run test:watch",
    "typecheck": "turbo run typecheck",
    "version-packages": "changeset version"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^15.15.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "turbo": "^1.11.3",
    "typescript": "^5.3.3",
    "zustand": "^4.4.7"
  },
  "packageManager": "pnpm@8.14.1",
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml}": [
      "prettier --write"
    ]
  }
}
